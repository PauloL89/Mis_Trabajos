@model Personas.Models.Usuario
@*// esta vista va a trabajar con este modelo y es necesario para poder unir la clase con la vista*@
@{
    ViewBag.Title = "Login";

}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Ingrese al Sistema</h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre de Usuario</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form-control", @id = "txt_nombreUsuario" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Contraseña</label>
                    <div class="col-sm-6">
                        @Html.PasswordFor(model => model.password, htmlAttributes: new { @class = "form-control", @id = "txt_password" })
                    </div>
                </div>
                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Ingresar
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}
