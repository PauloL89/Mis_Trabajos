@model Lavadero_Ejercicio1_U4.Models.Lavado
@{
    ViewBag.Title = "EliminarLavado";
}


<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Eliminar el Lavado @Model.patente</h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    @Html.HiddenFor(Model => Model.idLavado) @*// seteamos el valor de id y esta ooculto para el usuario final *@
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">
                <div class="form-group">
                    <label class="col-sm-6 control-label">Patente</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.patente, htmlAttributes: new { @class = "form-control", @id = "txt_patente" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Tipo</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.idTipo, htmlAttributes: new { @class = "form-control", @id = "txt_tipo" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Taxi</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.taxi, htmlAttributes: new { @class = "form-control", @id = "txt_taxi" })
                    </div>
                </div>
                <div class="form-group">
                    <label class="col-sm-6 control-label">Habitual</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.habitual, htmlAttributes: new { @class = "form-control", @id = "txt_habitual" })
                    </div>
                </div>

                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-danger" type="submit">
                            Eliminar Lavado
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


