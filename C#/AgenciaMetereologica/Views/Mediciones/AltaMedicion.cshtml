@model AgenciaMetereologica.Models.Mediciones
@{
    ViewBag.Title = "Alta de Nueva Medicion";
    List<SelectListItem> itemEstacion = (List<SelectListItem>)ViewBag.itemsEstaciones;
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Alta de nueva Medicion</h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-6 control-label">Dia</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.dia, htmlAttributes: new { @class = "form-control", @id = "txt_dia" })
                    </div>
                </div>



                <div class="form-group">
                    <label class="col-sm-6 control-label">Estacion</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("idEstacion", itemEstacion, "Seleccione la Estacion", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Temperatura</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.temperatura, htmlAttributes: new { @class = "form-control", @id = "txt_temperatura" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Humedad</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.humedad, htmlAttributes: new { @class = "form-control", @id = "txt_humedad" })
                    </div>
                </div>



                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Cargar Medicion
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


