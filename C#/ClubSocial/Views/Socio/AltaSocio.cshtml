@model ClubSocial.Models.Socio
@{
    ViewBag.Title = "Alta de Socio";
    List<SelectListItem> itemTipoDoc = (List<SelectListItem>)ViewBag.itemsTipoDoc;
    List<SelectListItem> itemDeporte = (List<SelectListItem>)ViewBag.itemsDeporte;
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Alta de nuevo Socio</h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-6 control-label">Nombre</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nombre, htmlAttributes: new { @class = "form-control", @id = "txt_nombre" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Apellido</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.apellido, htmlAttributes: new { @class = "form-control", @id = "txt_apellido" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Tipo de Documento</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("id_tipoDoc", itemTipoDoc, "Seleccione tipo de documento", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Nro de Documento</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nro_Doc, htmlAttributes: new { @class = "form-control", @id = "txt_nroDoc" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Deporte</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("id_deporte", itemDeporte, "Seleccione el deporte a practicar", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                

                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Cargar Socio
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


