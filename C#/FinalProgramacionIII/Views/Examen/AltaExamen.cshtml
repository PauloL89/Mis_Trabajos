@model FinalProgramacionIII.Models.Examen
@{
    ViewBag.Title = "Alta de Socio";
    List<SelectListItem> itemMateria = (List<SelectListItem>)ViewBag.itemsMateria;
}

<div class="row">
    <div class="col-sm-12">
        <div>
            <h4>Alta de nuevo Examen</h4>
        </div>
    </div>
</div>
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-lg-6">
            <div class="form-horizontal">

                <div class="form-group">
                    <label class="col-sm-6 control-label">Materia</label>
                    <div class="col-sm-6">
                        @Html.DropDownList("IdMateria", itemMateria, "Seleccione Materia", htmlAttributes: new { @class = "form-control" })
                    </div>
                </div>

                <div class="form-group">
                    <label class="col-sm-6 control-label">Fecha</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.fecha, htmlAttributes: new { @class = "form-control", @id = "txt_fecha" })
                    </div>
                </div>

                

                <div class="form-group">
                    <label class="col-sm-6 control-label">Nota</label>
                    <div class="col-sm-6">
                        @Html.TextBoxFor(model => model.nota, htmlAttributes: new { @class = "form-control", @id = "txt_nota" })
                    </div>
                </div>

             


                <div class="form-group text-right">
                    <div class="col-xs-12">
                        <button class="btn btn-primary" type="submit">
                            Cargar Examen
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

}


